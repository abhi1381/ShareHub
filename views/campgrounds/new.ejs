<% include ../partials/header %>



<div class="container">
    
    <div class="row">
        <form action="/campGrounds" method="POST" style="margin: 0 auto;">
            <h1>Hey! a new CampGround</h1>
            <div class="form-group">
                <input class="form-control" type="text" name="name" placeholder="new camp">
            </div>
            <div class="form-group">
                <input class="form-control" type="number" name="price" placeholder="enter price" min="0.01" step="0.01">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="image" placeholder="image url">
            </div>
            <div class="form-group">
                <textarea class="form-control" type="text" name="description">Description</textarea>
            </div>
            <button class="btn btn-primary btn-lg" type="submit">ADD DATA</button>
            <a href="/campGrounds">Go Back</a>
        </form>
    </div>
    
</div>


<% include ../partials/footer %>