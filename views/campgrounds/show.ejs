<% include ../partials/header %>

    <div class="container">
        <div class="row">
            <div class="col-md-3">
                <div class="lead">
                    Happy Camping
                </div>
                <div class="list-group">
                    <li class="list-group-item active">INFO 1</li>
                    <li class="list-group-item">INFO 2</li>
                    <li class="list-group-item">INFO 3</li>
                </div>
            </div>
            <div class="col-md-9">
                <div class="img-thumbnail">
                    <img class="img-fluid" width="100%" src="<%= campGrounds.image %>">
                    <div class="content">
                        <h4 class="price">$<%= campGrounds.price %>/day</h4>
                        <a href="#"><h4><%= campGrounds.name %></h4></a>
                        <p>
                            <%= campGrounds.description %>
                        </p>
                        <p>
                            <em>Submitted By-</em>
                            <strong><%= campGrounds.author.username %></strong>
                        </p>
                        <% if(currentUser && campGrounds.author.id.equals(currentUser._id)) { %>
                            <a class="btn btn-warning" href="/campGrounds/<%= campGrounds._id %>/edit">EDIT</a>
                            <form id="destroy" action="/campGrounds/<%= campGrounds._id %>?_method=DELETE" method="post">
                                 <input type="submit" class="btn btn-danger" value="DELETE">
                            </form>
                        <% } %>
                    </div>
                </div>
                
                <div class="card">
                    <div class="card-header text-right">
                        <a class="btn btn-success" href="/campGrounds/<%= campGrounds._id %>/comments/new">Add new commens</a>
                    </div>
                     <% campGrounds.comments.forEach(function(comment){ %>
                        <div class="card-body">
                            <p class="text-right">10 days ago</p>
                            <h5 class=card-title""><%= comment.author.username %></h5>
                            <p class="card-text">
                                <%= comment.text %>
                            </p>
                            <% if(currentUser && comment.author.id.equals(currentUser._id)) { %>
                                <a class="btn btn-sm btn-warning" href="/campGrounds/<%= campGrounds._id %>/comments/<%= comment._id %>/edit">EDIT</a>
                                <form id="CommentDestroy" action="/campGrounds/<%= campGrounds._id %>/comments/<%= comment._id %>?_method=DELETE" method="post">
                                    <input type="submit" class="btn btn-sm btn-danger" value="DELETE">
                                </form>
                            <% } %>
                        </div>
                    <% }) %>
                </div>
            </div>
        </div>
    </div>
        
        
        
        
        
       

    
    
<% include ../partials/footer %>